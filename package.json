{
  "name": "edusphere",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:coverage": "turbo test -- --coverage",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "db:generate": "pnpm --filter @edusphere/db generate",
    "db:migrate": "pnpm --filter @edusphere/db migrate",
    "db:seed": "pnpm --filter @edusphere/db seed",
    "db:studio": "pnpm --filter @edusphere/db studio",
    "compose": "pnpm --filter @edusphere/gateway compose",
    "codegen": "turbo codegen",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.8.2"
  },
  "pnpm": {
    "overrides": {
      "tar": ">=7.5.8",
      "fast-xml-parser": ">=5.3.6",
      "@types/react": "~18.3.18"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
