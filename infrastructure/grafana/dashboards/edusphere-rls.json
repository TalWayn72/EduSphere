      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "sum(rate(edusphere_rls_policy_violations_total[5m])) by (service, table_name)",
          "legendFormat": "{{service}} / {{table_name}}",
          "refId": "A"
        }
      ],
      "title": "RLS Policy Violations per Minute",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
