      "type": "row"
    },
    {
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 33 },
      "id": 241,
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": true,
        "showTime": true,
        "wrapLogMessage": false
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "expr": "{namespace=\"edusphere\"} |= \"RLS\" or \"cross-tenant\" or \"auth_failure\" or \"jwt_error\" or \"rate_limit\"",
          "legendFormat": "",
          "refId": "A"
        }
