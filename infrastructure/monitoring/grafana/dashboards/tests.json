{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "bargauge", "name": "Bar gauge", "version": "" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" }
  ],
  "title": "EduSphere Test Metrics",
  "uid": "edusphere-test-metrics",
  "version": 1,
  "schemaVersion": 38,
  "tags": ["testing", "ci", "quality"],
  "timezone": "browser",
  "refresh": "5m",
  "time": { "from": "now-30d", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["5m", "15m", "30m", "1h"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "7d", "30d"]
  },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "pluginId": "prometheus",
        "label": "Datasource",
        "current": {},
        "hide": 0,
        "refresh": 1
      },
      {
        "name": "subgraph",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "label": "Subgraph",
        "query": "label_values(edusphere_test_failures_total, subgraph)",
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true,
        "allValue": ".*",
        "hide": 0,
        "refresh": 2
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "CI Test Duration Over Time",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "edusphere_test_duration_seconds{workflow=\"ci\"}",
          "legendFormat": "CI Duration (s)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 300 },
              { "color": "red", "value": 600 }
            ]
          }
        }
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "id": 2,
      "title": "Test Failure Rate by Subgraph",
      "type": "bargauge",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum by (subgraph) (increase(edusphere_test_failures_total{subgraph=~\"$subgraph\"}[30d]))",
          "legendFormat": "{{subgraph}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 20 }
            ]
          },
          "min": 0
        }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "displayMode": "gradient",
        "showUnfilled": true
      }
    },
    {
      "id": 3,
      "title": "k6 p95 Latency Over Time",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "k6_http_req_duration{quantile=\"0.95\"}",
          "legendFormat": "p95 Latency",
          "refId": "A"
        },
        {
          "expr": "k6_http_req_duration{quantile=\"0.50\"}",
          "legendFormat": "p50 Latency",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1000 },
              { "color": "red", "value": 2000 }
            ]
          }
        }
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "id": 4,
      "title": "Security Test Pass Rate",
      "type": "stat",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "100 * (1 - (sum(edusphere_test_failures_total{workflow=\"security\"}) / sum(edusphere_test_duration_seconds{workflow=\"security\"})))",
          "legendFormat": "Security Pass Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 90 },
              { "color": "green", "value": 100 }
            ]
          },
          "min": 0,
          "max": 100
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center"
      }
    },
    {
      "id": 5,
      "title": "Coverage % Trend Over Time",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "edusphere_test_coverage_percent{layer=\"backend\"}",
          "legendFormat": "Backend Coverage",
          "refId": "A"
        },
        {
          "expr": "edusphere_test_coverage_percent{layer=\"frontend\"}",
          "legendFormat": "Frontend Coverage",
          "refId": "B"
        },
        {
          "expr": "edusphere_test_coverage_percent{layer=\"rls\"}",
          "legendFormat": "RLS Coverage",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 80 },
              { "color": "green", "value": 90 }
            ]
          },
          "min": 0,
          "max": 100,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "links": [],
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0
}
