# Development Mode - set to 'true' to bypass Keycloak authentication
# Useful when Docker/Keycloak is not running
VITE_DEV_MODE=true

# GraphQL Gateway URLs
VITE_GRAPHQL_URL=http://localhost:4000/graphql
VITE_GRAPHQL_WS_URL=ws://localhost:4000/graphql

# Keycloak Authentication (not needed when VITE_DEV_MODE=true)
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=edusphere
VITE_KEYCLOAK_CLIENT_ID=edusphere-app

# Hive Collaboration WebSocket (Hocuspocus real-time server)
VITE_HOCUSPOCUS_URL=ws://localhost:1234
