{
  "schema": {
    "type": "federation",
    "federation": {
      "version": "2"
    }
  },
  "targets": {
    "production": {
      "registry": {
        "endpoint": "https://app.graphql-hive.com/graphql",
        "accessToken": "${HIVE_TOKEN}"
      },
      "usage": {
        "enabled": true,
        "endpoint": "https://app.graphql-hive.com/usage",
        "accessToken": "${HIVE_TOKEN}"
      }
    }
  },
  "services": [
    {
      "name": "core",
      "url": "http://localhost:4001/graphql",
      "sdl": "apps/subgraph-core/schema.graphql"
    },
    {
      "name": "content",
      "url": "http://localhost:4002/graphql",
      "sdl": "apps/subgraph-content/schema.graphql"
    },
    {
      "name": "annotation",
      "url": "http://localhost:4003/graphql",
      "sdl": "apps/subgraph-annotation/schema.graphql"
    },
    {
      "name": "collaboration",
      "url": "http://localhost:4004/graphql",
      "sdl": "apps/subgraph-collaboration/schema.graphql"
    },
    {
      "name": "agent",
      "url": "http://localhost:4005/graphql",
      "sdl": "apps/subgraph-agent/schema.graphql"
    },
    {
      "name": "knowledge",
      "url": "http://localhost:4006/graphql",
      "sdl": "apps/subgraph-knowledge/schema.graphql"
    }
  ]
}
