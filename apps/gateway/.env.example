PORT=4000
# Comma-separated list of allowed CORS origins (required in production)
# Example: https://app.edusphere.io,https://admin.edusphere.io
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Subgraph URLs
SUBGRAPH_CORE_URL=http://localhost:4001/graphql
SUBGRAPH_CONTENT_URL=http://localhost:4002/graphql
SUBGRAPH_ANNOTATION_URL=http://localhost:4003/graphql
SUBGRAPH_COLLABORATION_URL=http://localhost:4004/graphql
SUBGRAPH_AGENT_URL=http://localhost:4005/graphql
SUBGRAPH_KNOWLEDGE_URL=http://localhost:4006/graphql

# Persisted Queries (APQ) — set to true in production to reject arbitrary GraphQL
# When true, only pre-registered query hashes are accepted (OWASP API4 hardening)
PERSISTED_QUERIES_ONLY=true

# GraphQL Hive — Schema Registry
# Obtain a token from https://app.graphql-hive.com → Project Settings → Tokens
# Required for: pnpm --filter @edusphere/gateway schema:publish
#               pnpm --filter @edusphere/gateway schema:check
HIVE_TOKEN=<your-graphql-hive-token>
