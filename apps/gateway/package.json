{
  "name": "@edusphere/gateway",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node --loader tsx src/index.ts",
    "build": "echo 'Gateway is config-based, no build needed'",
    "compose": "node compose.js",
    "test": "vitest run --config tests/vitest.config.ts",
    "test:memory": "vitest run --reporter=verbose **/*.memory.spec.ts",
    "schema:check": "hive schema:check --service gateway --url http://localhost:4000/graphql --sdl apps/gateway/supergraph.graphql",
    "schema:publish": "hive schema:publish --service gateway --url http://localhost:4000/graphql --sdl apps/gateway/supergraph.graphql"
  },
  "dependencies": {
    "@edusphere/config": "workspace:*",
    "@edusphere/telemetry": "workspace:*",
    "@graphql-hive/gateway": "^2.2.1",
    "@graphql-yoga/plugin-response-cache": "^3.0.0",
    "graphql": "^16.12.0",
    "graphql-yoga": "^5.18.0",
    "jose": "^6.1.3",
    "nats": "^2.29.3",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@graphql-hive/cli": "latest",
    "@theguild/federation-composition": "^0.21.3",
    "@types/node": "^22.10.7",
    "tsx": "^4.19.2",
    "typescript": "^6.0.3",
    "vitest": "^4.0.18",
    "graphql-request": "^7.1.2"
  }
}
